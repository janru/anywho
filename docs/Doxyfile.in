PROJECT_NAME = "Anywho"

# Input directories
INPUT = ../include ../src ../README.md ../README_building.md ../README_dependencies.md ../README_docker.md ../README_troubleshooting.md

# Exclude certain files/directories
EXCLUDE = ''

# Recursively search for source files
RECURSIVE = YES

EXTRACT_CONCEPTS = YES

# Enable brief description by default
GENERATE_BRIEF_DESCRIPTION = YES

# Enable detailed descriptions (optional)
GENERATE_DETAILED_DESCRIPTION = YES

# Enable member descriptions (optional)
GENERATE_MEMBER_DESCRIPTION = YES

# Output format (HTML is common)
OUTPUT_FORMAT = html

# Output directory
OUTPUT_DIRECTORY = "_build_doxygen"

# Generate navigation tree
GENERATE_TREEVIEW = YES

# Generate index with all symbol
GENERATE_INDEX = YES

GENERATE_XML = YES

# Highlight code using a lexer (e.g., cpp)
USE_CLANG_STYLE_HIGHLIGHTING = YES

MARKDOWN_SUPPORT       = YES
USE_MDFILE_AS_MAINPAGE = ../README.md

VERBATIM_HEADERS = NO

GENERATE_LATEX = NO

# Customize HTML templates (optional)
# TEMPLATE_RELATIVIZE_LINKS = YES
# TEMPLATE_FILES = my_templates
